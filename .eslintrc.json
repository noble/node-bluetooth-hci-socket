{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2016
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-buffer-constructor": "error",
    "no-const-assign": "error",
    "prefer-const": "error",
    "prefer-spread": "error",
    "prefer-template": "error",
    "prefer-object-spread": "error",
    "guard-for-in": "error",
    "eqeqeq": "error",
    "no-bitwise": "off",
    "curly": "error",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
